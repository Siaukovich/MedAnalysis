@model IEnumerable<MedAnalysis.Core.Models.Patient>

@{
    ViewBag.Title = "Список пациентов";
}

<h2>Список пациентов</h2>

<p>
    @Html.ActionLink("Создать пациента", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Имя")
        </th>
        <th>
            @Html.DisplayName("Фамилия")
        </th>
        <th>
            @Html.DisplayName("Дата рождения")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayName(item.Birthdate.ToString("dd/MM/yyyy"))
        </td>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
