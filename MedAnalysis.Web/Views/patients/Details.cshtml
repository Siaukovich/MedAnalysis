@model MedAnalysis.Core.Models.Patient

@{
    ViewBag.Title = "Информация о пациенте";
}

    <h2>Информация о пациенте</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Имя")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayName("Фамилия")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayName("Дата рождения")
        </dt>

        <dd>
            @Html.DisplayName(Model.Birthdate.ToString("dd/MM/yyyy"))
        </dd>

    </dl>
</div>

<h4>Список анализов</h4>

<table class="table">
    
    <tr>
        <th>
            @Html.DisplayName("Название")
        </th>
        <th>
            @Html.DisplayName("Результат")
        </th>
        <th>
            @Html.DisplayName("Дата взятия")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Analysis)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                @Html.DisplayName(item.TakenAt.ToString("dd/MM/yyyy"))
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Создать новый анализ", "CreateAnalysis", new { id=Model.Id })
</p>

<p>
    @Html.ActionLink("Назад", "Index")
</p>
